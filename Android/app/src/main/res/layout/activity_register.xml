<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/iv_mainImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/main_image"
        android:transitionName="startImage"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="casual"
        android:text="Hi , WELCOME : )"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:transitionName="titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_mainImage" />

    <EditText
        android:id="@+id/etv_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Insert E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/tv_register_title"
        android:transitionName="etv_email"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/etv_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert Password"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/etv_register_email"
        android:transitionName="etv_password"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/etv_register_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password Check"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/bt_signin"
        app:layout_constraintTop_toBottomOf="@id/etv_register_password"
        android:transitionName="etv_password"
        android:layout_marginHorizontal="10dp"/>

    <ImageView
        android:id="@+id/iv_passwordImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/etv_register_password2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etv_register_password" />


    <Button
        android:id="@+id/bt_register_joinus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:layout_marginTop="52dp"
        android:background="#3af"
        android:text="계정 등록"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/etv_register_password2"
        android:transitionName="bt_go"/>

    <Button
        android:id="@+id/bt_register_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginBottom="8dp"
        android:text="돌아가기"
        android:textSize="19sp"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_register_joinus"
        android:transitionName="bt_register"/>



</androidx.constraintlayout.widget.ConstraintLayout>