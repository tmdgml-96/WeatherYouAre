<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E5F1FA">

    <LinearLayout
        android:id="@+id/weatherAlert_Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints">

        <Spinner
            android:id="@+id/alertEquip_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_alertEquipArray"
            tools:ignore="MissingConstraints"
            />

        <Spinner
            android:id="@+id/sensorKind_spinner"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_sensorKindArray"
            android:spinnerMode="dropdown"
            tools:ignore="MissingConstraints"
            />

        <EditText
            android:id="@+id/weather_value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:singleLine="true"/>


        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/weatherCompare_spinner"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_CompareArray"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/bt_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_cancel_24"
            android:background="#ffffff"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weatherAlert_Setting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints">

        <Spinner
            android:id="@+id/alertEquip_spinner2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_alertEquipArray"
            tools:ignore="MissingConstraints"
            android:spinnerMode="dropdown"
            />

        <Spinner
            android:id="@+id/sensorKind_spinner2"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_sensorKindArray"
            android:spinnerMode="dropdown"
            tools:ignore="MissingConstraints"
            />

        <EditText
            android:id="@+id/weather_value2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:singleLine="true"/>


        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/weatherCompare_spinner2"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_CompareArray"
            tools:ignore="MissingConstraints" />
        <ImageButton
            android:id="@+id/bt_delete2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_cancel_24"
            android:background="#ffffff"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weatherAlert_Setting3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="2dp"
        tools:ignore="MissingConstraints">

        <Spinner
            android:id="@+id/alertEquip_spinner3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_alertEquipArray"
            tools:ignore="MissingConstraints"
            android:spinnerMode="dropdown"
            />

        <Spinner
            android:id="@+id/sensorKind_spinner3"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_sensorKindArray"
            android:spinnerMode="dropdown"
            tools:ignore="MissingConstraints"
            />

        <EditText
            android:id="@+id/weather_value3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:singleLine="true"/>


        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/weatherCompare_spinner3"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:entries="@array/spinner_CompareArray"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/bt_delete3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_cancel_24"
            android:background="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="2dp"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="자외선 알림 수신"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"/>

        <Switch
            android:id="@+id/switch_uv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="2dp"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="강수 여부 알림 수신"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"/>

        <Switch
            android:id="@+id/switch_rain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="2dp"
        android:background="#fff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="미세먼지 알림 수신"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="5dp"/>

        <Switch
            android:id="@+id/switch_dust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="업데이트"
        android:textSize="19sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#3af"/>



</LinearLayout>